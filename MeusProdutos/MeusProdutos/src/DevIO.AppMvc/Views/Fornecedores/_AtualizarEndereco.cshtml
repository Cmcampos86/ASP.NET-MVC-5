@model DevIO.AppMvc.ViewModels.FornecedorViewModel
@{
    ViewData["Title"] = "Atualizar Endereço";
}

@* Essa partial já tem características de modal*@

@*Essa div usa um cabeçalho de modal(modal-header que vem tudo do bootstrap)*@
<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
    </button>
</div>

<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Partial("_ErrorSummary")
    <div class="form-horizontal col-md-offset-1">

        @Html.HiddenFor(model => model.Endereco.FornecedorId)
        @Html.HiddenFor(model => model.Endereco.Id)

        @*Utiliza a partialview endereço*@
        @Html.Partial("_Endereco")

        @*Essa div usa um rodapé de modal(modal-footer que vem tudo do bootstrap)*@
        @*Na div possui os botões*@
        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Atualizar Endereço" class="btn btn-success" />
                <input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal" />
            </div>
        </div>

    </div>
}

@*Precisa colocar o BuscaCep para ter a funcionalidade na partial _Endereco*@
<script>
    BuscaCep();
</script>